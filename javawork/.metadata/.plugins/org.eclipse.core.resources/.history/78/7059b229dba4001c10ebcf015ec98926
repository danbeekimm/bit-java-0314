package day0316;

public class Ex7MultiFor {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		for(int a=1;a<=5;a++) {//행
			for(int b=1;b<=5;b++) {
				System.out.print("★");//열
			}
			System.out.println();
		}
		System.out.println("----------------");
		
		for(int a=1;a<=5;a++) {//행
			for(int b=1;b<=a;b++) {
				System.out.print("★");//열
			}
			System.out.println();
		}
		System.out.println("----------------");
	}

}
