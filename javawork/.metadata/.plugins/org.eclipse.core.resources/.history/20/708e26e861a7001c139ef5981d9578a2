package day0316;

import java.util.Scanner;

public class Honja {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
//구구단 다출력
		Scanner sc = new Scanner(System.in);
		
		int dan;
		
		
		
		while (true) {
			System.out.println("몇 단 구구단을 알아보실건가요?");
			dan = sc.nextInt();
			if (dan ==0) {
				break;}
			if (dan <0) {
				System.out.println("다시입력해주세요");
			continue;}
			for(int i=1;i<11;i++) {
				dan =dan *i;
				
				System.out.println(dan +"*"+i+"="+dan*i);
				break;
			}System.out.println();
		}
		
		
		
	}

}
