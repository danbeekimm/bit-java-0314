package day0316;

import java.util.Scanner;

public class Ex1Munje {

	public static void main(String[] args) {
		
////1부터 100 사이의 난수를 변수 rnd 에 저장후
//		그 숫자를 알아맞추는 프로그램을 작성하시오
//		while문,if문,random 메서드 사용
		
		
		Scanner sc=new Scanner(System.in);
			int answer;
			int rnd=(int)(Math.random()*100);
			
			
			while(true) {
				System.out.println("1~100 사이의 난수를 입력하시오");
				answer=sc.nextInt();
				if(answer==rnd) {
					System.out.println("정답입니다.");
					break;
				}else if(answer < rnd) {
					System.out.println(answer+"은 랜덤값보다 작습니다.");
				}else { 
					System.out.println(answer+"은 랜덤값보다 큽니다.");
					continue;}
				
		} System.out.println();
		
	}
	}


